/*SEÇÃO 14 -> FUNÇÕES DE AGREGAÇÃO:
	- SOMA,
	- MÉDIA,
	- ETC.

*/

CREATE TABLE VENDEDORES(
	IDVENDEDOR INT PRIMARY KEY AUTO_INCREMENT,
	NOME VARCHAR(30),
	SEXO CHAR(1),
	JANEIRO FLOAT(10,2),
	FEVEREIRO FLOAT(10,2),
	MARCO FLOAT(10,2)
);

INSERT INTO VENDEDORES VALUES(NULL, 'CARLOS', 'M', 4300.00, 5200.00, 3350.00);
INSERT INTO VENDEDORES VALUES(NULL, 'PEDRO', 'M', 4700.00, 5100.00, 2500.00);
INSERT INTO VENDEDORES VALUES(NULL, 'MARIA', 'F', 1900.00, 5200.00, 6000.00);
INSERT INTO VENDEDORES VALUES(NULL, 'ALINE', 'F', 3150.00, 5700.00, 3350.00);
INSERT INTO VENDEDORES VALUES(NULL, 'JULIA', 'F', 3300.00, 6100.00, 3250.00);


SELECT * FROM VENDEDORES
ORDER BY 4 DESC;



/*MAX -> VALOR MÁXIMO DE UMA COLUNA;
  MIN -> MENOR VALOR DE UMA COLUNA;
  AVG -> MÉDIA DE UMA COLUNA;
*/
SELECT MAX(FEVEREIRO) AS MAIOR_FEVEREIRO
FROM VENDEDORES;


SELECT MIN(FEVEREIRO) AS MENOR_FEVEREIRO
FROM VENDEDORES;

SELECT AVG(FEVEREIRO) AS MEDIA_FEVEREIRO
FROM VENDEDORES;


SELECT MAX(JANEIRO) AS MAX_JAN,
	   MIN(JANEIRO) AS MIN_JAN,
	   AVG(JANEIRO) AS MED_JAN
	   FROM VENDEDORES;


/*FUNÇÃO TRUNCATE -> */
SELECT MAX(JANEIRO) AS MAX_JAN,
	   MIN(JANEIRO) AS MIN_JAN,
	   TRUNCATE(AVG(JANEIRO), 2) AS MED_JAN
	   FROM VENDEDORES;



/*SUM -> SOMA*/
SELECT SUM(JANEIRO) AS TOTAL_JAN
FROM VENDEDORES;

SELECT SUM(JANEIRO) AS TOTAL_JAN,
	   SUM(FEVEREIRO) AS TOTAL_FEV,
	   SUM(MARCO) AS TOTAL_MAR
FROM VENDEDORES;



/*A PRINCIPAL FUNÇÃO DE UM BANCO DE DADOS É BUSCAR DADOS E A PARTIR DELES GERAR INFORMAÇÃO.*/

/*VENDAS POR SEXO*/

SELECT SEXO, SUM(FEVEREIRO) AS TOTAL_MAR
FROM VENDEDORES
GROUP BY SEXO;

